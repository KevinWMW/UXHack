---
import Layout from '../layouts/Layout.astro';
import '../styles/global.css';
import Header from "../components/header.astro";
import Footer from "../components/footer.astro";
import FAQs from '../components/FAQs.astro';
import FAB from '../components/FAB.astro';
import Countdown from '../components/Countdown.astro';
import SponsorCard from '../components/SponsorCard.astro';

---

<Layout>
	<Header/>
	<div>
		<!-- Welcome Section -->
		<div id="home" class="flex flex-col items-center min-h-screen py-10 md:py-20 pt-24 md:pt-40 px-4 parallax">
			<div class="bg-base-100 bg-opacity-90 rounded-lg shadow-lg p-6 md:p-12 w-full md:max-w-2xl">
				<h1 class="text-2xl md:text-4xl font-bold text-center mb-3 md:mb-5">
					Welcome to TechVision UXHackathon!
				</h1>

				<h2 class="text-lg md:text-2xl text-center px-2 md:px-4 mb-3 md:mb-5">
					Join us for an exciting journey into the world of user experience design.
				</h2>

				<h2 class="text-lg md:text-2xl font-bold text-center mb-6 md:mb-8 px-2 md:px-4">
					28th February - 1st March
				</h2>

				<Countdown/>
				
				<tito-button 
					class="btn btn-lg md:btn-xl btn-primary mt-3 md:mt-5 w-full" 
					event="techvision-soc/uxhack-26">Sign Up!
				</tito-button>

				<div id="location">
					<a 
						href="https://maps.app.goo.gl/WNG8EFTth2mbQksA9" 
						target="_blank" 
						rel="noopener noreferrer"
						class="btn btn-lg md:btn-xl btn-secondary mt-3 md:mt-5 w-full">
						Where are we?
					</a>
				</div>
			</div>
		</div>

		<!-- Sponsors Section -->
		<div id="sponsors" class="flex flex-col items-center py-10 md:py-20   px-4 bg-white bg-opacity-10">
			<h1 class="text-2xl md:text-4xl font-bold text-center mb-6 md:mb-10">
				Sponsors
			</h1>
			<div class="grid grid-cols-1 md:grid-cols-2 gap-6 w-full max-w-5xl justify-items-center">
				<SponsorCard 
					name="Lovable"
					logo="/lovable.png" 
					description="Thank you for your generous support!"
					sponsorLevel="silver"
				/>
				<SponsorCard 
					name="University of Sheffield" 
					logo="/UOS.png"
					description="Supporting innovation and creativity."
					sponsorLevel="gold"
				/>
			</div>
		</div>

		<!-- Agenda Section -->
		<div id="agenda" class="py-10 md:py-20   parallax">
			<div class="max-w-3xl mx-auto px-4">
				<div class="card bg-base-100 shadow-sm mb-8 md:mb-12">
					<div class="card-body">
						<h1 class="card-title text-2xl md:text-4xl justify-center">
							Agenda
						</h1>
						<p class="text-center">
							<a href="#agenda" class="inline-flex items-center text-center text-base md:text-lg font-medium text-primary hover:underline">
								Learn more about our schedule
								<svg aria-hidden="true" class="w-5 h-5 ml-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
									<path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
								</svg>
							</a>
						</p>
					</div>
				</div>

				<!-- Saturday Schedule -->
				<div class="card bg-base-100 shadow-sm mb-12">
					<div class="card-body">
						<h2 class="card-title text-xl md:text-2xl">Saturday - 28th February</h2>
						<div class="flow-root">
						<div class="-my-4 divide-y">
							<div class="py-4">
								<p class="text-base md:text-lg font-normal text-gray-600 mb-1">09:00 - 11:00</p>
								<h3 class="text-base md:text-lg font-semibold">Registration & Welcome</h3>
							</div>
							<div class="py-4">
								<p class="text-base md:text-lg font-normal text-gray-600 mb-1">11:00 - 12:00</p>
								<h3 class="text-base md:text-lg font-semibold">Opening Ceremony</h3>
							</div>
							<div class="py-4">
								<p class="text-base md:text-lg font-normal text-gray-600 mb-1">12:00 - 14:00</p>
								<h3 class="text-base md:text-lg font-semibold">Hackathon Commences</h3>
							</div>
							<div class="py-4">
								<p class="text-base md:text-lg font-normal text-gray-600 mb-1">14:00 - 15:00</p>
								<h3 class="text-base md:text-lg font-semibold">Lunch Break</h3>
							</div>
							<div class="py-4">
								<p class="text-base md:text-lg font-normal text-gray-600 mb-1">15:00 - 17:00</p>
								<h3 class="text-base md:text-lg font-semibold">Mini Project & Workshops</h3>
							</div>
							<div class="py-4">
								<p class="text-base md:text-lg font-normal text-gray-600 mb-1">17:00 - 19:00</p>
								<h3 class="text-base md:text-lg font-semibold">Continued Hacking</h3>
							</div>
							<div class="py-4">
								<p class="text-base md:text-lg font-normal text-gray-600 mb-1">19:00 - 20:00</p>
								<h3 class="text-base md:text-lg font-semibold">Dinner Break</h3>
							</div>
							<div class="py-4">
								<p class="text-base md:text-lg font-normal text-gray-600 mb-1">20:00 - 22:00</p>
								<h3 class="text-base md:text-lg font-semibold">Mini Games & Networking</h3>
							</div>
							<div class="py-4">
								<p class="text-base md:text-lg font-normal text-gray-600 mb-1">22:00</p>
								<h3 class="text-base md:text-lg font-semibold">Building Closes</h3>
							</div>
						</div>
						</div>
					</div>
				</div>

				<!-- Sunday Schedule -->
				<div class="card bg-base-100 shadow-sm mb-12">
					<div class="card-body">
						<h2 class="card-title text-xl md:text-2xl">Sunday - 1st March</h2>
						<div class="flow-root">
							<div class="-my-4 divide-y">
							<div class="py-4">
								<p class="text-base md:text-lg font-normal text-gray-600 mb-1">07:00</p>
								<h3 class="text-base md:text-lg font-semibold">Building Reopens</h3>
							</div>
								<div class="py-4">
									<p class="text-base md:text-lg font-normal text-gray-600 mb-1">10:00 - 11:00</p>
									<h3 class="text-base md:text-lg font-semibold">Breakfast & Final Push</h3>
								</div>
								<div class="py-4">
									<p class="text-base md:text-lg font-normal text-gray-600 mb-1">12:00 - 13:00</p>
									<h3 class="text-base md:text-lg font-semibold">Hackathon Ends & Presentations</h3>
								</div>
								<div class="py-4">
									<p class="text-base md:text-lg font-normal text-gray-600 mb-1">13:00 - 15:00</p>
									<h3 class="text-base md:text-lg font-semibold">Judging & Award Ceremony</h3>
								</div>
								<div class="py-4">
									<p class="text-base md:text-lg font-normal text-gray-600 mb-1">15:00 - 16:00</p>
									<h3 class="text-base md:text-lg font-semibold">Closing Remarks & Networking</h3>
								</div>
								<div class="py-4">
									<p class="text-base md:text-lg font-normal text-gray-600 mb-1">16:00</p>
									<h3 class="text-base md:text-lg font-semibold">Event Ends</h3>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>

		<!-- Where Are We Section -->


		<!-- FAQs Section -->
		<div id="faqs" class="flex flex-col items-center py-10 md:py-20   px-4">
			<h1 class="text-2xl md:text-4xl font-bold text-center mb-2 md:mb-10">
				Frequently Asked Questions
			</h1>
			<FAQs/>
		</div>

		<FAB/>
		<Footer/>

</Layout>
