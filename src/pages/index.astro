---
import Layout from '../layouts/Layout.astro';
import '../styles/global.css';
import Header from "../components/header.astro";
import Footer from "../components/footer.astro";
import FAQs from '../components/FAQs.astro';
import Countdown from '../components/Countdown.astro';
import SponsorCard from '../components/SponsorCard.astro';
import Analytics from '@vercel/analytics/astro'
---

<Layout>
	<Header/>
	<div class="relative">
		<!-- Welcome Section -->
		<div id="home" class="flex flex-col items-center content-center min-h-screen py-10 md:py-20 pt-24 md:pt-40 px-4 parallax">
			<div class="bg-base-100 bg-opacity-90 rounded-lg shadow-lg p-6 md:p-12 w-full md:max-w-2xl">
				<h1 class="text-2xl md:text-4xl font-bold text-center mb-3 md:mb-5">
					Welcome to TechVision UXHackathon!
				</h1>

				<h2 class="text-lg md:text-2xl text-center px-2 md:px-4 mb-3 md:mb-5">
					Join us for an exciting journey into the world of user experience design.
				</h2>

				<h2 class="text-lg md:text-2xl font-bold text-center mb-6 md:mb-8 px-2 md:px-4">
					28th February - 1st March
				</h2>

				<Countdown/>
				
				<tito-button 
					event="techvision-soc/uxhack-26">Sign Up!
				</tito-button>
		

				<div id="location">
					<a 
						href="https://maps.app.goo.gl/WNG8EFTth2mbQksA9" 
						target="_blank" 
						rel="noopener noreferrer"
						class="btn btn-lg md:btn-xl btn-secondary mt-3 md:mt-5 w-full">
						Where are we?
					</a>
				</div>
			</div>
		</div>

		<!-- Sponsors Section -->
		<div id="sponsors" class="flex flex-col items-center py-10 md:py-20   px-4 bg-white bg-opacity-10">
			<h1 class="text-2xl md:text-4xl font-bold text-center mb-6 md:mb-10">
				Sponsors
			</h1>
			<div class="grid grid-cols-1 md:grid-cols-2 gap-6 w-full max-w-5xl justify-items-center">
				<SponsorCard 
					name="Lovable"
					logo="/lovable.png" 
					description="Thank you for your generous support!"
					sponsorLevel="silver"
				/>
				<SponsorCard 
					name="University of Sheffield" 
					logo="/UOS.png"
					description="Supporting innovation and creativity."
					sponsorLevel="gold"
				/>
			</div>
		</div>
		<!-- Agenda Section -->
		<div id="agenda" class="py-10 md:py-20 parallax">
			<div class="max-w-3xl mx-auto px-4">
				<div class="card bg-base-100 shadow-sm mb-8 md:mb-12">
					<div class="card-body">
						<h1 class="card-title text-2xl md:text-4xl justify-center">
							Agenda
						</h1>
						<p class="text-center">
							<a href="#agenda" class="inline-flex items-center text-center text-base md:text-lg font-medium text-primary hover:underline">
								Learn more about our schedule
								<svg aria-hidden="true" class="w-5 h-5 ml-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
									<path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
								</svg>
							</a>
						</p>
					</div>
				</div>

				<!-- Saturday Schedule -->
                <div class="mb-12 card bg-base-100 shadow-md p-6 md:p-8">
                    <h2 class="text-xl md:text-2xl font-bold mb-6 text-primary">Saturday - 28th February</h2>
                    <div class="flow-root">
                        <div class="-my-4 divide-y">
                            <div class="flex flex-col gap-2 py-4 sm:gap-6 sm:flex-row sm:items-center">
                                <p class="w-32 text-base md:text-lg font-normal text-gray-600 sm:text-right shrink-0">09:00 - 10:00</p>
                                <h3 class="text-base md:text-xl font-semibold">Registration & Welcome + Refreshments</h3>
                            </div>
                            <div class="flex flex-col gap-2 py-4 sm:gap-6 sm:flex-row sm:items-center">
                                <p class="w-32 text-base md:text-lg font-normal text-gray-600 sm:text-right shrink-0">10:00 - 10:30</p>
                                <h3 class="text-base md:text-xl font-semibold">Opening Ceremony</h3>
                            </div>
                            <div class="flex flex-col gap-2 py-4 sm:gap-6 sm:flex-row sm:items-center">
                                <p class="w-32 text-base md:text-lg font-normal text-gray-600 sm:text-right shrink-0">10:30 - 11:00</p>
                                <h3 class="text-base md:text-xl font-semibold">Teambuilding time</h3>
                            </div>
                            <div class="flex flex-col gap-2 py-4 sm:gap-6 sm:flex-row sm:items-center">
                                <p class="w-32 text-base md:text-lg font-normal text-gray-600 sm:text-right shrink-0">11:00</p>
                                <h3 class="text-base md:text-xl font-semibold">Hackathon commences</h3>
                            </div>							
                            <div class="flex flex-col gap-2 py-4 sm:gap-6 sm:flex-row sm:items-center">
                                <p class="w-32 text-base md:text-lg font-normal text-gray-600 sm:text-right shrink-0">12:30 - 13:30</p>
                                <h3 class="text-base md:text-xl font-semibold">Lunch Break</h3>
                            </div>
                            <div class="flex flex-col gap-2 py-4 sm:gap-6 sm:flex-row sm:items-center">
                                <p class="w-32 text-base md:text-lg font-normal text-gray-600 sm:text-right shrink-0">15:00 - 16:00</p>
                                <h3 class="text-base md:text-xl font-semibold">Workshop</h3>
                            </div>
                            <div class="flex flex-col gap-2 py-4 sm:gap-6 sm:flex-row sm:items-center">
                                <p class="w-32 text-base md:text-lg font-normal text-gray-600 sm:text-right shrink-0">16:00</p>
                                <h3 class="text-base md:text-xl font-semibold">Continued Hacking</h3>
                            </div>
                            <div class="flex flex-col gap-2 py-4 sm:gap-6 sm:flex-row sm:items-center">
                                <p class="w-32 text-base md:text-lg font-normal text-gray-600 sm:text-right shrink-0">17:30 - 18:30</p>
                                <h3 class="text-base md:text-xl font-semibold">Dinner Break</h3>
                            </div>
                            <div class="flex flex-col gap-2 py-4 sm:gap-6 sm:flex-row sm:items-center">
                                <p class="w-32 text-base md:text-lg font-normal text-gray-600 sm:text-right shrink-0">20:00 - 21:00</p>
                                <h3 class="text-base md:text-xl font-semibold">Mini Games & Networking</h3>
                            </div>
                            <div class="flex flex-col gap-2 py-4 sm:gap-6 sm:flex-row sm:items-center">
                                <p class="w-32 text-base md:text-lg font-normal text-gray-600 sm:text-right shrink-0">22:00</p>
                                <h3 class="text-base  md:text-xl font-semibold">Building Closes</h3>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Sunday Schedule -->
                <div class="card bg-base-100 shadow-md p-6 md:p-8">
                    <h2 class="text-xl md:text-2xl font-bold mb-6 text-primary">Sunday - 1st March</h2>
                    <div class="flow-root">
                        <div class="-my-4 divide-y">
                            <div class="flex flex-col gap-2 py-4 sm:gap-6 sm:flex-row sm:items-center">
                                <p class="w-32 text-base md:text-lg font-normal text-gray-600 sm:text-right shrink-0">07:00</p>
                                <h3 class="text-lg md:text-xl font-semibold">Building Reopens</h3>
                            </div>
                            <div class="flex flex-col gap-2 py-4 sm:gap-6 sm:flex-row sm:items-center">
                                <p class="w-32 text-base md:text-lg font-normal text-gray-600 sm:text-right shrink-0">09:00 - 10:00</p>
                                <h3 class="text-base md:text-xl font-semibold">Breakfast & Final Push</h3>
                            </div>
                            <div class="flex flex-col gap-2 py-4 sm:gap-6 sm:flex-row sm:items-center">
                                <p class="w-32 text-base md:text-lg font-normal text-gray-600 sm:text-right shrink-0">11:00</p>
                                <h3 class="text-base md:text-xl font-semibold">Hackathon Ends</h3>
                            </div>
							<div class="flex flex-col gap-2 py-4 sm:gap-6 sm:flex-row sm:items-center">
                                <p class="w-32 text-base md:text-lg font-normal text-gray-600 sm:text-right shrink-0">11:00-12:00</p>
                                <h3 class="text-base md:text-xl font-semibold">Judging Submissions</h3>
                            </div>
                            <div class="flex flex-col gap-2 py-4 sm:gap-6 sm:flex-row sm:items-center">
                                <p class="w-32 text-base md:text-lg font-normal text-gray-600 sm:text-right shrink-0">12:00 - 13:00</p>
                                <h3 class="text-base md:text-xl font-semibold">Award Ceremony</h3>
                            </div>
                            <div class="flex flex-col gap-2 py-4 sm:gap-6 sm:flex-row sm:items-center">
                                <p class="w-32 text-base md:text-lg font-normal text-gray-600 sm:text-right shrink-0">13:00 - 13:30</p>
                                <h3 class="text-base md:text-xl font-semibold">Event Ends & Mini Networking Session</h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

		<!-- Where Are We Section -->


		<!-- FAQs Section -->
		<div id="faqs" class="flex flex-col items-center py-10 md:py-20   px-4">
			<h1 class="text-2xl md:text-4xl font-bold text-center mb-2 md:mb-10">
				Frequently Asked Questions
			</h1>
			<FAQs/>
		</div>

		<Footer/>

</Layout>
