---
import Layout from '../layouts/Layout.astro';
import '../styles/global.css';
import Header from "../components/header.astro";
import Footer from "../components/footer.astro";
import FAQs from '../components/FAQs.astro';
import FAB from '../components/FAB.astro';
import Countdown from '../components/Countdown.astro';
import SponsorCard from '../components/SponsorCard.astro';


// Welcome to Astro! Wondering what to do next? Check out the Astro documentation at https://docs.astro.build
// Don't want to use any of this? Delete everything in this file, the `assets`, `components`, and `layouts` directories, and start fresh.
---

<Layout>
	<Header/>
	<div class="bg">
		<!-- Welcome Section -->
		<div id="home" class="flex flex-col items-center py-10 md:py-20 pt-24 md:pt-40 px-4">
			<div class="bg-base-100 bg-opacity-90 rounded-lg shadow-lg p-6 md:p-12 w-full md:max-w-2xl">
				<h1 class="text-2xl md:text-4xl font-bold text-center mb-3 md:mb-5">
					Welcome to TechVision UXHackathon!
				</h1>

				<h2 class="text-lg md:text-2xl text-center px-2 md:px-4 mb-3 md:mb-5">
					Join us for an exciting journey into the world of user experience design.
				</h2>

				<h2 class="text-lg md:text-2xl font-bold text-center mb-6 md:mb-8 px-2 md:px-4">
					28th February - 1st March
				</h2>

				<Countdown/>

				<button class="btn btn-lg md:btn-xl btn-primary mt-6 md:mt-8 w-full">Sign Up!</button>
			</div>
		</div>

		<!-- Sponsors Section -->
		<div id="sponsors" class="flex flex-col items-center py-10 md:py-20 border-t-4 px-4">
			<h1 class="text-2xl md:text-4xl font-bold text-center mb-6 md:mb-10">
				Sponsors
			</h1>
			<div class="grid grid-cols-1 md:grid-cols-2 gap-6 w-full max-w-5xl">
				<SponsorCard 
					name="Lovable"
					logo="/lovable.png" 
					description="Thank you for your generous support!"
					sponsorLevel="silver"
				/>
				<SponsorCard 
					name="University of Sheffield" 
					logo="/UOS.png"
					description="Supporting innovation and creativity."
					sponsorLevel="gold"
				/>
			</div>
		</div>

		<!-- Agenda Section -->
		<div id="agenda" class="py-10 md:py-20 border-t-4 ">
			<div class="max-w-3xl mx-auto px-4">
				<div class="text-center mb-8 md:mb-12 card bg-base-100 shadow-md p-6 md:p-8">
					<h1 class="text-2xl md:text-4xl font-bold text-center mb-4 md:mb-6">
						Agenda
					</h1>
					<a href="#agenda" class="inline-flex items-center text-center text-base md:text-lg font-medium text-primary hover:underline">
						Learn more about our schedule
						<svg aria-hidden="true" class="w-5 h-5 ml-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
							<path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
						</svg>
					</a>
				</div>

				<!-- Saturday Schedule -->
				<div class="mb-12 card bg-base-100 shadow-md p-6 md:p-8">
					<h2 class="text-xl md:text-2xl font-bold mb-6">Saturday - 28th February</h2>
					<div class="flow-root">
						<div class="-my-4 divide-y">
							<div class="flex flex-col gap-2 py-4 sm:gap-6 sm:flex-row sm:items-center">
								<p class="w-32 text-base md:text-lg font-normal text-gray-600 sm:text-right shrink-0">09:00 - 11:00</p>
								<h3 class="text-base md:text-lg font-semibold">Registration & Welcome</h3>
							</div>
							<div class="flex flex-col gap-2 py-4 sm:gap-6 sm:flex-row sm:items-center">
								<p class="w-32 text-base md:text-lg font-normal text-gray-600 sm:text-right shrink-0">11:00 - 12:00</p>
								<h3 class="text-base md:text-lg font-semibold">Opening Ceremony</h3>
							</div>
							<div class="flex flex-col gap-2 py-4 sm:gap-6 sm:flex-row sm:items-center">
								<p class="w-32 text-base md:text-lg font-normal text-gray-600 sm:text-right shrink-0">12:00 - 14:00</p>
								<h3 class="text-base md:text-lg font-semibold">Hackathon Commences</h3>
							</div>
							<div class="flex flex-col gap-2 py-4 sm:gap-6 sm:flex-row sm:items-center">
								<p class="w-32 text-base md:text-lg font-normal text-gray-600 sm:text-right shrink-0">14:00 - 15:00</p>
								<h3 class="text-base md:text-lg font-semibold">Lunch Break</h3>
							</div>
							<div class="flex flex-col gap-2 py-4 sm:gap-6 sm:flex-row sm:items-center">
								<p class="w-32 text-base md:text-lg font-normal text-gray-600 sm:text-right shrink-0">15:00 - 17:00</p>
								<h3 class="text-base md:text-lg font-semibold">Mini Project & Workshops</h3>
							</div>
							<div class="flex flex-col gap-2 py-4 sm:gap-6 sm:flex-row sm:items-center">
								<p class="w-32 text-base md:text-lg font-normal text-gray-600 sm:text-right shrink-0">17:00 - 19:00</p>
								<h3 class="text-base md:text-lg font-semibold">Continued Hacking</h3>
							</div>
							<div class="flex flex-col gap-2 py-4 sm:gap-6 sm:flex-row sm:items-center">
								<p class="w-32 text-base md:text-lg font-normal text-gray-600 sm:text-right shrink-0">19:00 - 20:00</p>
								<h3 class="text-base md:text-lg font-semibold">Dinner Break</h3>
							</div>
							<div class="flex flex-col gap-2 py-4 sm:gap-6 sm:flex-row sm:items-center">
								<p class="w-32 text-base md:text-lg font-normal text-gray-600 sm:text-right shrink-0">20:00 - 22:00</p>
								<h3 class="text-base md:text-lg font-semibold">Mini Games & Networking</h3>
							</div>
							<div class="flex flex-col gap-2 py-4 sm:gap-6 sm:flex-row sm:items-center">
								<p class="w-32 text-base md:text-lg font-normal text-gray-600 sm:text-right shrink-0">22:00</p>
								<h3 class="text-base md:text-lg font-semibold">Building Closes</h3>
							</div>
						</div>
					</div>
				</div>

				<!-- Sunday Schedule -->
				<div class="card bg-base-100 shadow-md p-6 md:p-8">
					<h2 class="text-xl md:text-2xl font-bold mb-6">Sunday - 1st March</h2>
					<div class="flow-root">
						<div class="-my-4 divide-y">
							<div class="flex flex-col gap-2 py-4 sm:gap-6 sm:flex-row sm:items-center">
								<p class="w-32 text-base md:text-lg font-normal text-gray-600 sm:text-right shrink-0">07:00</p>
								<h3 class="text-base md:text-lg font-semibold">Building Reopens</h3>
							</div>
							<div class="flex flex-col gap-2 py-4 sm:gap-6 sm:flex-row sm:items-center">
								<p class="w-32 text-base md:text-lg font-normal text-gray-600 sm:text-right shrink-0">10:00 - 11:00</p>
								<h3 class="text-base md:text-lg font-semibold">Breakfast & Final Push</h3>
							</div>
							<div class="flex flex-col gap-2 py-4 sm:gap-6 sm:flex-row sm:items-center">
								<p class="w-32 text-base md:text-lg font-normal text-gray-600 sm:text-right shrink-0">12:00 - 13:00</p>
								<h3 class="text-base md:text-lg font-semibold">Hackathon Ends & Presentations</h3>
							</div>
							<div class="flex flex-col gap-2 py-4 sm:gap-6 sm:flex-row sm:items-center">
								<p class="w-32 text-base md:text-lg font-normal text-gray-600 sm:text-right shrink-0">13:00 - 15:00</p>
								<h3 class="text-base md:text-lg font-semibold">Judging & Award Ceremony</h3>
							</div>
							<div class="flex flex-col gap-2 py-4 sm:gap-6 sm:flex-row sm:items-center">
								<p class="w-32 text-base md:text-lg font-normal text-gray-600 sm:text-right shrink-0">15:00 - 16:00</p>
								<h3 class="text-base md:text-lg font-semibold">Closing Remarks & Networking</h3>
							</div>
							<div class="flex flex-col gap-2 py-4 sm:gap-6 sm:flex-row sm:items-center">
								<p class="w-32 text-base md:text-lg font-normal text-gray-600 sm:text-right shrink-0">16:00</p>
								<h3 class="text-base md:text-lg font-semibold">Event Ends</h3>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>

		<!-- Where Are We Section -->
		<div id="location" class="flex flex-col items-center py-10 md:py-20 border-t-4 px-4">
			<a 
				href="https://maps.app.goo.gl/WNG8EFTth2mbQksA9" 
				target="_blank" 
				rel="noopener noreferrer"
				class="btn btn-lg md:btn-xl btn-primary">
				Where are we?
			</a>
		</div>

		<!-- FAQs Section -->
		<div id="faqs" class="flex flex-col items-center py-10 md:py-20 border-t-4 px-4">
			<h1 class="text-2xl md:text-4xl font-bold text-center mb-6 md:mb-10">
				Frequently Asked Questions
			</h1>
			<FAQs/>
		</div>

		<FAB/>
		<Footer/>
	</div>

</Layout>
