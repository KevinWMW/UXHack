---
interface Props {
    name: string;
    logo?: string;
    description?: string;
    sponsorLevel?: 'platinum' | 'gold' | 'silver' | 'bronze';
}

const { name, logo, description, sponsorLevel = 'bronze' } = Astro.props;

const badgeColors = {
    platinum: 'badge-info',
    gold: 'badge-warning',
    silver: 'badge-secondary',
    bronze: 'badge-accent'
};
---

<div class="card bg-base-100 w-96 shadow-sm">
    {logo && (
        <figure>
            <img src={logo} alt={`${name} logo`} class="h-32 object-contain" />
        </figure>
    )}
    <div class="card-body">
        <h2 class="card-title">{name}</h2>
        <p>{description}</p>
        <div class="card-actions justify-end">
            <div class={`badge ${badgeColors[sponsorLevel]}`}>
                {sponsorLevel.charAt(0).toUpperCase() + sponsorLevel.slice(1)}
            </div>
        </div>
    </div>
</div>
