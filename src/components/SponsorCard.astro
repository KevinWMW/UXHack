---
interface Props {
    name: string;
    logo?: string;
    description?: string;
    sponsorLevel?: 'platinum' | 'gold' | 'silver' | 'bronze';
}

const { name, logo, description, sponsorLevel = 'bronze' } = Astro.props;

const badgeColors = {
    platinum: 'badge-info',
    gold: 'badge-warning',
    silver: 'badge-secondary',
    bronze: 'badge-accent'
};
---

<div class="card bg-base-100 shadow-md hover:shadow-lg transition-shadow w-full max-w-sm">
    {logo && (
        <figure class="px-4 pt-4">
            <img src={logo} alt={`${name} logo`} class="rounded-lg h-32 object-contain" />
        </figure>
    )}
    <div class="card-body items-center text-center">
        <h2 class="card-title text-lg md:text-xl">{name}</h2>
        <div class={`badge ${badgeColors[sponsorLevel]}`}>
            {sponsorLevel.charAt(0).toUpperCase() + sponsorLevel.slice(1)}
        </div>
        {description && (
            <p class="text-sm md:text-base">{description}</p>
        )}
    </div>
</div>
